@model homeworkEF.Models.ViewModel.FoodViewModel

@{
    ViewData["Title"] = "Search";
}

<h1>Edit</h1>

<h4>Food</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Search">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="SearchParams.MinPrice" class="control-label"></label>
                <input asp-for="SearchParams.MinPrice" class="form-control" />
                <span asp-validation-for="SearchParams.MinPrice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SearchParams.MaxPrice" class="control-label"></label>
                <input asp-for="SearchParams.MaxPrice" class="form-control" />
                <span asp-validation-for="SearchParams.MaxPrice" class="text-danger"></span>
            </div>
           <div class="form-group">
                <label asp-for="SearchParams.Starts" class="control-label"></label>
                <input asp-for="SearchParams.Starts" class="form-control" />
                <span asp-validation-for="SearchParams.Starts" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<h4>@ViewData["Message"]</h4>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Foods[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Foods[0].Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Foods[0].Starts)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Foods ) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Starts)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
